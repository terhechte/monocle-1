@import '../mixins'

.app .posts-landing {
  background: #F8FAFB
  position: relative
  height: 100%
  box-shadow: inset 0 0px 1px rgba(0, 0,0, 0.1)

  .wrapper {
    display: flex
    justify-content: center
    align-items: center
  }

  article.splash {
    display: block
    width: 70%
    margin-top: 80px;
    h3 {
      font-weight: 500
      font-size: 18px
      margin-bottom: 20px
    }
    p {
      margin-bottom: 10px
    }
  }

  nav {
    position: absolute
    right: 15px
    top: 15px

    a {
      display: block
      background-position: center
      float: right
      margin-left: 11px
    }

    a.twitter {
      width: 23px
      height: 19px
      background-image2x: '/assets/twitter.png' 23px 19px
    }

    a.feed {
      width: 17px
      height: 18px
      background-image2x: '/assets/feed.png' 17px 18px
    }
  }

  h1 {
    color: #D32626
    text-shadow: 0 1px rgba(255, 255, 255, 0.9)
    font-size: 30px
    font-weight: normal
    margin: 0 0 0 -5px
    padding: 0
    user-select: none
    pointer-events: none
  }
}